<h1>Edit Discussion for <%= @discussion.title %></h1>
<%= @discussion.errors.full_messages.join(', ') %>
<%= form_for [@project, @discussion] do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<br>
<%= f.submit %>
<% end %>
