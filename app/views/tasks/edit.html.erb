<h1>Edit Task</h1>
<%= @task.errors.full_messages.join(', ') %>
<%= form_for [@project, @task] do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.label :due_date %>
  <%= f.date_select :due_date, start_year: Date.today.year%>
</div>
<%= f.submit %>
<% end %>
